<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TemaNro1" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/Verde</item> <!-- Color de fondo personalizado -->
        <item name="android:buttonStyle">@style/ButtonStyle1</item>
        <item name="android:textViewStyle">@style/TextViewStyle1</item>
        <item name="android:editTextStyle">@style/EditTextStyle1</item>
    </style>

    <style name="ButtonStyle1" parent="android:Widget.Button">
        <item name="android:backgroundTint">#FDFBFB</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="TextViewStyle1" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="EditTextStyle1" parent="android:Widget.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>