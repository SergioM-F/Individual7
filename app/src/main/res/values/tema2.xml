<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TemaNro2" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Color de fondo personalizado -->
        <item name="android:windowBackground">@color/Rojo</item>
        <!-- Estilos para Button -->
        <item name="android:buttonStyle">@style/ButtonStyle2</item>

        <!-- Estilos para TextView -->
        <item name="android:textViewStyle">@style/TextViewStyle2</item>

        <!-- Estilos para EditText -->
        <item name="android:editTextStyle">@style/EditTextStyle2</item>
    </style>
    <!-- Estilo personalizado para Button en Tema 2 -->
    <style name="ButtonStyle2" parent="android:Widget.Button">
        <item name="android:textColor">#000000</item>
        <item name="android:background">#00FF00</item>
    </style>

    <!-- Estilo personalizado para TextView en Tema 2 -->
    <style name="TextViewStyle2" parent="android:Widget.TextView">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">25sp</item>
    </style>

    <!-- Estilo personalizado para EditText en Tema 2 -->
    <style name="EditTextStyle2" parent="android:Widget.EditText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">25sp</item>
    </style>

</resources>